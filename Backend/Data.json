              "header": [
                  {"key": "Authorization", "value": "{{token}}", "type": "text"}
              ],
              "url": {
                  "raw": "http://localhost:3000/api/messages/history?contactId=<USER_ID>",
                  "protocol": "http",
                  "host": ["localhost"],
                  "port": "3000",
                  "path": ["api", "messages", "history"],
                  "query": [{"key": "contactId", "value": "<USER_ID>"}]
